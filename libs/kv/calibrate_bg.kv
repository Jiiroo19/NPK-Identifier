#:import MatplotFigure graph_widget
#:kivy 2.2.1

<CalibrateBG>
    name: 'cal_bg'
    figure_wgt2:figure_wgt2

    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            text: "Background Spectrum"
            size_hint_y: .1
            halign: 'center'
        
        MatplotFigure:
            id: figure_wgt2
        MDBoxLayout:
            size_hint_y:0.2
            padding: '10dp'
            spacing: 5
            
            MDRectangleFlatButton:
                size_hint_x: 0.333
                size_hint_y: None
                text:"Back"
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.disable_clock()
                    app.root.current = 'cal_dark'
                    
            MDRectangleFlatButton:
                id: capture
                size_hint_x: 0.333
                size_hint_y: None
                text:"Capture" 
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.disable_clock()
                    root.activate_next()
                    root.activate_rescan()
                    root.activate_capture()
            
            MDRectangleFlatButton:
                id: rescan
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Rescan" 
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.activate_rescan()
                    root.on_enter()
                    root.activate_capture()

            MDRectangleFlatButton:
                id: next_but
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Next"  
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    app.root.current = 'cal_light'
                                  
        