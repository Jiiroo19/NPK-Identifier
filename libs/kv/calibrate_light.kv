#:import MatplotFigure graph_widget
#:kivy 2.2.1

<CalibrateLight>
    name: 'cal_light'
    figure_wgt3:figure_wgt3

    MDBoxLayout:
        orientation:'vertical'
        MDLabel:
            text: "Light Spectrum"
            size_hint_y: .1
            halign: 'center'
        
        MatplotFigure:
            id: figure_wgt3

        MDBoxLayout:
            size_hint_y: 0.2
            spacing: 5
            padding: '10dp'
            
            MDRectangleFlatButton:
                size_hint_x: 0.333
                size_hint_y: None
                text:"Back"
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.disable_clock()
                    app.root.current = 'cal_bg'

            MDRectangleFlatButton:
                id: capture
                size_hint_x: 0.333
                size_hint_y: None
                text:"Capture" 
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.disable_clock()
                    root.activate_next()
                    root.activate_rescan()
                    root.activate_capture()
            
            MDRectangleFlatButton:
                id: rescan
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Rescan" 
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    root.activate_rescan()
                    root.on_enter()
                    root.activate_capture()

            MDRectangleFlatButton:
                id: next_but
                disabled: True
                size_hint_x: 0.333
                size_hint_y: None
                text:"Next"
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release:
                    app.root.current = 'scanner'
                                  
        