#:import MatplotFigure graph_widget

<CalibrateDark>
    name: 'cal_dark'
    figure_wgt:figure_wgt
    next_but:next_but
    BoxLayout:
        orientation:'vertical'
        MatplotFigure:
            id: figure_wgt
        BoxLayout:
            size_hint_y:0.2
            Button:
                text:"Back"
                on_release:
                    root.disable_clock()
                    app.root.current = 'lobby'
            Button:
                text:"Capture" 
                on_release:
                    root.disable_clock()
                    root.activate_button()

            Button:
                id: next_but
                disabled: True
                text:"Next"  
                on_release:
                    app.root.current = 'cal_bg'
                                  
        