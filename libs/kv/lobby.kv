<Lobby>
    name: 'lobby'
    MDBoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        MDLabel:
            text: 'NPK Identifier'
            halign: 'center'
            theme_text_color: 'Secondary'
        MDBoxLayout:
            
            size_hint_y: .2
            spacing: 10
            
            MDRectangleFlatButton:
                size_hint_x: 1
                size_hint_y: None
                text: 'Exit'
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release: app.stop()
            
            MDRectangleFlatButton:
                size_hint_x: 1
                size_hint_y: None
                text: 'Start Scanning'
                theme_text_color: "Custom"
                text_color: "black"
                line_color: "black"
                md_bg_color: 'grey'
                on_release: app.root.current = 'cal_dark'